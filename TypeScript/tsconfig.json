{
    "compilerOptions": {       //编译选项
        "target":"ES2016",        //告诉TS，编译JS的版本
        "module": "CommonJS",  //编译目标使用的模块化标准,CommonJS是node环境的
        "lib": ["ES2016"],   //编译的环境，DOM就是浏览器环境，没有node环境，需要使用第三方库
        // "outDir": "./dist"     //存放编译结果
        "strictNullChecks": true, //更加严格的空类型检查
        "removeComments": true,    //编译移除注释
        "noImplicitUseStrict": false, //编译后不开启严格模式
        "strictPropertyInitialization": true  //更加严格的属性检查，检查初始化
    },
    "include": ["./src"],      //要编译的文件夹下的文件
    // "files": ["./src/index"] 编译具体的文件

  }
  